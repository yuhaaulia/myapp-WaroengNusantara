<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageViewFotoMakanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/makanan" />

            <TextView
                android:id="@+id/textViewNamaMakanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-black"
                android:text="Judul Nama Makanan"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewInfoMakanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="10dp"
                android:text="Deskripsi Makanan Deskripsi Makanan Deskripsi Makanan Deskripsi Makanan Deskripsi Makanan Deskripsi Makanan Deskripsi Makanan Deskripsi Makanan Deskripsi Makanan Deskripsi Makanan Deskripsi Makanan Deskripsi Makanan Deskripsi Makanan Deskripsi Makanan Deskripsi Makanan Deskripsi Makanan Deskripsi Makanan Deskripsi Makanan Deskripsi Makanan Deskripsi Makanan Deskripsi Makanan Deskripsi Makanan Deskripsi Makanan Deskripsi Makanan Deskripsi Makanan Deskripsi Makanan Deskripsi Makanan Deskripsi Makanan Deskripsi Makanan Deskripsi Makanan"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textViewHargaMakanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textAlignment="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/kurang"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text=" - "/>

                <TextView
                    android:id="@+id/jumlah"
                    android:padding="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <Button
                    android:id="@+id/tambah"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text=" + "/>
            </LinearLayout>

            <Button
                android:id="@+id/pesanDetail"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="PESAN"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>